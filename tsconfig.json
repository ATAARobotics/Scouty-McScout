{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "target": "es2017",
    "lib": ["dom", "es2021"],
    "outDir": "client/dist",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react"
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
